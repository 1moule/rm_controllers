<launch>
    <!-- This test suit for standard,hero,sentry-->
    <!-- Launch common-->
    <include file="$(find rm_chassis_controllers)/test/common.launch">
        <arg name="type" value="standard"/>
        <arg name="disable_timeout" value="true"/>
        <arg name="odom_tf" value="true"/>
        <arg name="yaw_tf" value="false"/>
    </include>

    <!-- Controller test -->
    <test test-name="linear_x_accel_limit_test"
          pkg="rm_chassis_controllers"
          type="linear_x_accel_limit_test"
          time-limit="40.0">
    </test>

</launch>