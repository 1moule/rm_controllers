<launch>
    <!-- This test suit for standard,hero,sentry-->
    <include file="$(find rm_chassis_controllers)/test/common.launch">
        <arg name="type" value="sentry"/>
        <arg name="load_empty_world" value="false"/>
        <arg name="load_sentry_world" value="true"/>
        <arg name="odom_tf" value="false"/>
        <arg name="mecanum_chassis" value="false"/>
    </include>

    <!-- Controller test -->
    <test test-name="default_odom_frame_test"
          pkg="rm_chassis_controllers"
          type="default_odom_frame_test"
          time-limit="40.0">
    </test>
</launch>