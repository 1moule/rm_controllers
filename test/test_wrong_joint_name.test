<launch>
    <!-- This test suit for standard,hero,sentry-->
    <include file="$(find rm_chassis_controllers)/test/common.launch">
        <arg name="type" value="standard"/>
        <arg name="disable_timeout" value="false"/>
        <arg name="disable_odom_tf" value="false"/>
        <arg name="load_wrong_yaml" value="true"/>
        <arg name="odom_tf" value="true"/>
        <arg name="yaw_tf" value="false"/>
    </include>

    <!-- Controller test -->
    <test test-name="wrong_joint_name_test"
          pkg="rm_chassis_controllers"
          type="wrong_joint_name_test"
          time-limit="40.0">
    </test>
</launch>