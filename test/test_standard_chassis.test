<launch>
  <!-- This test suit for standard,hero,sentry-->
  <!-- Make sure to disable timeout -->
  <rosparam file="$(find rm_chassis_controllers)/test/disable_timeout.yaml" command="load"/>
  <arg name="type" default="standard"/>

  <!-- Load common test stuff -->
  <include file="$(find rm_chassis_controllers)/launch/load_controllers.launch">
    <arg name="odom_tf" value="true"/>
    <arg name="ekf" default="false"/>
  </include>

  <include file="$(find rm_gazebo)/launch/empty_world.launch">
    <arg name="load_chassis" default="true"/>
    <arg name="load_gimbal" default="false"/>
    <arg name="load_shooter" default="false"/>
    <arg name="load_arm" default="false"/>
    <arg name="paused" default="false"/>
  </include>


  <!-- Controller test -->
  <test test-name="standard_chassis_test"
        pkg="rm_chassis_controllers"
        type="standard_chassis_test"
        time-limit="40.0">
  </test>
</launch>
